<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bq2015.bqimagepicker.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:onClick="pickFromCamera"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/from_camrer"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="pickFromPotoLib"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="@string/from_photo_lib"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <com.bq2015.photocut.CircleImageView
        android:layout_gravity="center"
        android:id="@+id/circle_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
